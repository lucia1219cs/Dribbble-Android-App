<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.lucia.dribbble">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".DribbbleApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".authenticate.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.MainActivity" />
        <activity android:name=".view.shot_detail.ShotActivity" />
        <activity android:name=".authenticate.AuthActivity" />
        <activity android:name=".view.bucket_list.BucketListActivity" />
        <activity android:name=".view.bucket_list.BucketShotListActivity"></activity>
    </application>

</manifest>